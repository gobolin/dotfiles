[module/xwindow]
type = internal/xwindow
format-padding = 1
label = %title:0:30:...%
label-empty = brachycarpa
label-underline = ${colors.highlight}
label-empty-underline = ${colors.highlight}

[module/bspwm]
type = internal/bspwm
enable-click = true

label-focused = %index%
label-focused-background = #3102
label-focused-padding = 1
label-focused-underline = ${colors.foreground}

label-occupied = %index%
label-occupied-background = #2102
label-occupied-padding = 1
label-occupied-underline = ${colors.highlight}

label-urgent = %index%
label-urgent-padding = 1
label-urgent-background = ${colors.alert}

label-empty = %index%
;label-empty-foreground = ${colors.foreground}
label-empty-padding = 1

[module/player]
type = custom/script
tail = true
; prefix symbol is shown before the text
format-prefix = " %{T2}ÔÄÅ  "
format = "%{T1}<label> %{T2}ÔÄÅ %{T1}"
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh

[module/player-prev]
type = custom/script
exec = echo "%{T2}ÔÅä "
format = <label>
click-left = playerctl previous spotify

[module/spotify-play-pause]
type = custom/ipc
hook-0 = echo " ÔÅå "
hook-1 = echo " ÔÅã "
initial = 1
click-left = playerctl play-pause

[module/player-next]
type = custom/script
exec = echo " ÔÅé %{T1}"
format = <label>
click-left = playerctl next spotify

[module/speaker-switch]
type = custom/script
exec = echo speakers
format=<label>
click-left = pactl set-default-sink alsa_output.pci-0000_01_00.1.hdmi-stereo-extra4

[module/phones-switch]
type = custom/script
exec = echo phones
format=<label>
click-left = pactl set-default-sink alsa_output.pci-0000_00_1f.3.analog-stereo


[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected-padding = 1
format-connected = <ramp-signal> <label-connected>
label-connected = %essid%

format-disconnected =

ramp-signal-0 = ÔÇû
ramp-signal-foreground = ${colors.foreground}

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

format-connected = ÔÉÅ <label-connected>
format-connected-padding = 1
label-connected = %local_ip%


[module/date]
type = internal/date
interval = 5

date = "%d %b %Y, "
time = %I:%M %p

format-padding = 1
;format-background = #0000

label = %date%%time%
label-underline = ${colors.highlight}

[module/volume]
