;background = #41303d
background-alt = #444
foreground = ${xrdb:color7:#222}
;foreground = #dfdfdf
foreground-alt = ${xrdb:color5:#222}
border = ${xrdb:color6:#fff}
primary = #ffd500
secondary = #ff0086
alert = #ff0086

[bar/primarytop]
monitor = ${env:MONITOR:eDP-1-1}
monitor-fallback = eDP-1
width = 100%
height = 22
offset-x = -2%
offset-y = 0
radius-bottom = 10.0
fixed-center = false
bottom = false

