[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 0

label-open = PWR
label-open-foreground = ${xrdb:color13:#fff}
label-close = CNCL
label-close-foreground = #ff0086
label-separator = ||
label-separator-foreground = ${colors.background}
format-underline = #ff0086

menu-0-0 = RBOOT
menu-0-0-exec = systemctl reboot
menu-0-1 = SHTDN
menu-0-1-exec = systemctl poweroff
menu-0-2 = SUSP
menu-0-2-exec = i3lock-fancy & sleep 3 && systemctl suspend
menu-0-3 = LOGOUT
menu-0-3-exec = i3-msg exit






